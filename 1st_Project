static int n=0;
struct STUDENT
{
	int age,roll_no, reg_no;
	char name[50] , father_name[50] , mother_name[50];
	float cgpa;
};
int main()
{
	void add();
	void displayAll();
	void record();
	void del();
	void record_by_name();
	void modify();
	int i,count=0,a,n=0,r,m,ms;

		while(1)
		{
        printf("\n\t\t==================================================\n");
